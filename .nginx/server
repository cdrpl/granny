upstream server {
	server 127.0.0.1:3010;
}

server {
	server_name server_proxy;
	listen 0.0.0.0:4010;

	location /ws {
		proxy_pass http://server;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "Upgrade";
		proxy_set_header Host $host;
	}

	location / {
		proxy_pass http://server;
	}
}
